{
  "device": "cuda",
  "model_name": "Qwen/Qwen2.5-0.5B-Instruct",
  "train_file": "/kaggle/input/fitness-faq-dataset/qa_fitness_nutrition_train.jsonl",
  "eval_file": "/kaggle/input/fitness-faq-dataset/qa_fitness_nutrition_val.jsonl",
  "max_length": 512,

  "lora": {
    "r": 16,
    "alpha": 64,
    "target_modules": ["q_proj", "v_proj"],
    "dropout": 0.1,
    "bias": "none",
    "task_type": "CAUSAL_LM"
  },

  "training": {
    "per_device_train_batch_size": 2,
    "gradient_accumulation_steps": 16,
    "learning_rate": 5e-5,
    "warmup_steps": 40,
    "num_train_epochs": 4,
    "logging_steps": 10,
    "save_strategy": "steps",
    "save_steps": 50,
    "save_total_limit": 2,
    "output_dir": "./qwen2.5-0.5b-finetuned",
    "logging_dir": "./logs",
    "report_to": "none"
  }
}
